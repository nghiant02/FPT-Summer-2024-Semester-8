@page "{id:int}"
@model eStoreClient.Pages.Members.DeleteModel

@{
    ViewData["Title"] = "Delete Member";
}

<h1>Delete Member</h1>

<h4>Member</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <h3>Are you sure you want to delete this member?</h3>
        <div>
            <h4>@Model.Member.Email</h4>
            <p>Company: @Model.Member.CompanyName</p>
            <p>City: @Model.Member.City</p>
            <p>Country: @Model.Member.Country</p>
        </div>
        <form method="post">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
