@page
@model eStoreClient.Pages.OrderDetails.DeleteModel
@{
    ViewData["Title"] = "Delete Order Detail";
}

<h2>Delete Order Detail</h2>

<h4>Order Detail</h4>
<hr />
<div>
    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Order Detail</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Order ID
            </dt>
            <dd class="col-sm-10">
                @Model.OrderDetail.OrderId
            </dd>
            <dt class="col-sm-2">
                Product ID
            </dt>
            <dd class="col-sm-10">
                @Model.OrderDetail.ProductId
            </dd>
            <dt class="col-sm-2">
                Unit Price
            </dt>
            <dd class="col-sm-10">
                @Model.OrderDetail.UnitPrice
            </dd>
            <dt class="col-sm-2">
                Quantity
            </dt>
            <dd class="col-sm-10">
                @Model.OrderDetail.Quantity
            </dd>
            <dt class="col-sm-2">
                Discount
            </dt>
            <dd class="col-sm-10">
                @Model.OrderDetail.Discount
            </dd>
        </dl>

        <form method="post">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-page="/OrderDetails/Index">Back to List</a>
        </form>
    </div>
</div>
