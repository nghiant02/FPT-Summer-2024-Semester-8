@page "{id:int}"
@model eStoreClient.Pages.Products.DeleteModel
@{
    ViewData["Title"] = "Delete Product";
}

<h1>Delete Product</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Product Name
        </dt>
        <dd class="col-sm-10">
            @Model.Product.ProductName
        </dd>
        <dt class="col-sm-2">
            Weight
        </dt>
        <dd class="col-sm-10">
            @Model.Product.Weight
        </dd>
        <dt class="col-sm-2">
            Unit Price
        </dt>
        <dd class="col-sm-10">
            @Model.Product.UnitPrice
        </dd>
        <dt class="col-sm-2">
            Units In Stock
        </dt>
        <dd class="col-sm-10">
            @Model.Product.UnitsInStock
        </dd>
        <dt class="col-sm-2">
            Category Name
        </dt>
        <dd class="col-sm-10">
            @Model.Product.CategoryName
        </dd>
    </dl>

    <form method="post">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
