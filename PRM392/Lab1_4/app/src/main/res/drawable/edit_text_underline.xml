<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00FFFFFF"/> <!-- Transparent background -->
        </shape>
    </item>
    <item
        android:left="-2dp"
        android:right="-2dp"
        android:bottom="0dp"> <!-- Extends slightly on the sides for a full-width effect -->
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- White color for the underline -->
            <size android:height="2dp"/> <!-- Increased height for visibility -->
        </shape>
    </item>
</layer-list>
